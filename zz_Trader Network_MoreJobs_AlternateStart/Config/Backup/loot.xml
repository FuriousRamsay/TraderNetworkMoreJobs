<Config>

	<remove xpath="/lootcontainers/lootgroup[@name='ulmStarterKit']"/>

	<insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">
		<lootgroup name="ulmStarterKit" count="all">
			<item name="meleeToolShovelT0StoneShovel" count="1" quality="1,0"/>
			<item name="ulmResourcePrimitiveRepairKit" count="2" />
			<item name="drugPainkillers" count="1" />
		</lootgroup>
	</insertAfter>

	<append xpath="/lootcontainers">
		<lootgroup name="lootFindScrapToolsChest" count="all">
			<item name="qc_startersupplies" count="1"/>
			<item name="ulmMeleeAxeScrapIron" count="1" quality="1,10" />
			<item name="ulmToolPickaxeScrapIron" count="1" quality="1,10" />
			<item name="ulmToolShovelScrapIron" count="1" quality="1,10" />
			<item name="resourceRepairKit" count="2"/>
		</lootgroup>

		<lootcontainer id="800" count="1" size="5,1" sound_open="UseActions/open_chest" sound_close="UseActions/close_chest" open_time="1.5" loot_quality_template="qualBaseTemplate" destroy_on_close="false">
			<item group="lootFindScrapToolsChest" />
		</lootcontainer>	
	</append>
</Config>